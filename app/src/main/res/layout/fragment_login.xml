<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_login_logo"
        android:contentDescription="@string/todo_list" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login"
        style="@style/LoginTextInputLayout"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:hint="@string/login"
        android:inputType="text"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:textColorLink="@color/gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        style="@style/LoginTextInputLayout"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:textColorLink="@color/gray"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        android:text="@string/sign_in"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:fontFamily="@font/mandali"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_button_background_orange" />

    <TextView
        android:id="@+id/dontHaveAccountTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:textSize="@dimen/sp_11"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:clickable="true"
        android:text="@string/don_t_have_"
        android:textAppearance="@style/don_t_have_" />
</androidx.appcompat.widget.LinearLayoutCompat>