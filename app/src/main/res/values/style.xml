<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyDatePicker" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">?colorOnPrimary</item>
        <item name="colorPrimaryDark">?colorOnPrimary</item>
        <item name="colorPrimary">?colorOnPrimary</item>
        <item name="android:windowBackground">@drawable/ic_button_background</item>
        <item name="fontFamily">@font/montserrat_alternates</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textColorSecondary">?colorOnSecondary</item>
        <item name="android:textColorPrimary">?colorOnSecondary</item>
        <item name="android:colorControlHighlight">?colorSecondary</item>
        <item name="android:colorControlActivated">?colorSecondary</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>
    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorOnSecondary</item>
    </style>
    <style name="don_t_have_">

        <item name="android:textSize">
            12sp
        </item>

        <item name="android:textColor">
            #66272727
        </item>

    </style>
</resources>